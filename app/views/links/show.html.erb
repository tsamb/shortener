<p id="notice"><%= notice %></p>

<p>
  <strong>Full url:</strong>
  <%= @link.full_url %>
</p>

<p>
  <strong>Short url:</strong>
  <%= @link.short_url %>
</p>

<p>
  <strong>Click count:</strong>
  <%= @link.click_count %>
</p>

<%= link_to 'Edit', edit_link_path(@link) %> |
<%= link_to 'Back', links_path %>

<h2>User Agents</h2>
<% if @link.has_clicks? %>
  <table>
  	<tr>
  		<th>User agent string</th>
      <th>Count</th>
  	</tr>
    <% @link.user_agent_frequency.each do |user_agent, count| %>
      <tr>
        <td><%= user_agent %></td>
        <td><%= count %></td>
      </tr>
    <% end %>
  </table>
<% else %>
  <p>User information will appear as soon as people have used the shortened link.</p>
<% end %>
